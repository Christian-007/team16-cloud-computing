<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- Adapted from an example from Apache -->
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <!-- general description of the webapp -->
  <display-name>My Web Application</display-name>
  <description>
    This is beta version 1.5 of BizApp
  </description>

  <!-- context initialization parameters, access using
   String val = getServletContext().getInitParameter("name");
  -->
  <context-param>
    <param-name>webmaster</param-name>
    <param-value>webadmin@mycompany.com</param-value>
    <description>
      The email address of the administrator to whom all questions and comments should be addressed.
    </description>
  </context-param>

  <!-- definitions for the servlets in the webapp -->
  <servlet>
    <servlet-name>Hello</servlet-name>
    <servlet-class>HelloServlet</servlet-class>
  </servlet>

  <!-- translate URI requests to specific servlets -->
   <servlet-mapping>
     <!-- map any URI ending in ".../submit" to Controller -->
    <servlet-name>Hello</servlet-name>
    <url-pattern>/greeting</url-pattern>

  </servlet-mapping>

  <servlet>
    <servlet-name>Applications</servlet-name>
    <jsp-file>/WEB-INF/views/applications.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>Applications</servlet-name>
    <url-pattern>/applications</url-pattern>
  </servlet-mapping>

  <!-- Registration Servlet -->

  <servlet>
    <servlet-name>Regist</servlet-name>
    <servlet-class>RegistrationServlet</servlet-class>
  </servlet>

   <servlet-mapping>
    <servlet-name>Regist</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>

  <!-- Upload Servlet -->

  <servlet>
    <servlet-name>Upload</servlet-name>
    <servlet-class>UploadServlet</servlet-class>
  </servlet>

   <servlet-mapping>
    <servlet-name>Upload</servlet-name>
    <url-pattern>/upload</url-pattern>
  </servlet-mapping>

  <!-- Login Servlet -->
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>LoginServlet</servlet-class>
  </servlet>

   <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <!-- Topup Servlet -->
  <servlet>
    <servlet-name>Topup</servlet-name>
    <servlet-class>TopupServlet</servlet-class>
  </servlet>

  <!-- translate URI requests to specific servlets -->
   <servlet-mapping>
     <!-- map any URI ending in ".../submit" to Controller -->
    <servlet-name>Topup</servlet-name>
    <url-pattern>/topup</url-pattern>

  </servlet-mapping>

   <!-- Edit User Servlet -->
  <servlet>
    <servlet-name>EditUser</servlet-name>
    <servlet-class>EditUserServlet</servlet-class>
  </servlet>

   <servlet-mapping>
    <servlet-name>EditUser</servlet-name>
    <url-pattern>/editDetails</url-pattern>

  </servlet-mapping>

  <!-- Pay Servlet -->
  <servlet>
    <servlet-name>Pay</servlet-name>
    <servlet-class>PayServlet</servlet-class>
  </servlet>

   <servlet-mapping>
    <servlet-name>Pay</servlet-name>
    <url-pattern>/pay</url-pattern>

  </servlet-mapping>

  <!-- Password Servlet -->
  <servlet>
    <servlet-name>ChangePassword</servlet-name>
    <servlet-class>ChangePasswordServlet</servlet-class>
  </servlet>

   <servlet-mapping>
    <servlet-name>ChangePassword</servlet-name>
    <url-pattern>/changePassword</url-pattern>

  </servlet-mapping>
  
  <!-- Password Servlet -->
  <servlet>
    <servlet-name>DeleteApp</servlet-name>
    <servlet-class>DeleteAppServlet</servlet-class>
  </servlet>

   <servlet-mapping>
    <servlet-name>DeleteApp</servlet-name>
    <url-pattern>/deleteApp</url-pattern>

  </servlet-mapping>

   <!-- define the default session timeout as 30 min -->
   <session-config>
     <session-timeout>30</session-timeout>
   </session-config>
 </web-app>
